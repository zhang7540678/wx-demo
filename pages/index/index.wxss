/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.enterindex{
  margin-top: 80px;
  color: green;
}

.swiper{
  height: 400rpx;
  width: 100%;
  background: rgba(0,0,0,0.3)
}
.swiper .swiper-item{
  width: 100%;
  height: 400rpx;
  text-align: center;
  line-height: 400rpx;
}

.pd-area{
  font-weight: 400;
  font-size: 24rpx;
}
.pd-area .pd-list{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
}
.pd-area .pd-list .name{
  width: 560rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
  overflow: hidden;
  padding-right: 20rpx;
}

.loading{
  text-align: center;
  font-size: 24rpx;
  padding: 10rpx;
  width: 100%;
  border-bottom: 1px solid #eee;
}