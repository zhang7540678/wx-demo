/**index.wxss**/
.container{
  margin: 0;
  padding: 0;
  background: #f2f2f2;
}
.swiper, .swiper-item{
  margin:0;
  padding: 0;
  width: 100%;
  height: 562.5rpx;
}
.nav-container{
  white-space: nowrap;
  background: #fff;
  margin-bottom: 10rpx;
}
.nav-container .nav-item{
  line-height: 80rpx;
  font-size: 24rpx;
  color: #252525;
  display: inline-block;
  width: 160rpx;
  text-align: center;
  border-bottom: 4rpx solid #fff;
}
.nav-container .nav-item.active{
  border-bottom: 4rpx solid #e64340;
}
.pro-list{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  border: 10rpx solid #f2f2f2;
  border-top: none;
  box-sizing: border-box;
}
.pro-list .pro-item{
  width: 50%;
  background: #fff;
  height: 468rpx;
  border: 10rpx solid #f2f2f2;
  box-sizing: border-box;
  font-size: 26rpx;
}
.pro-list .pro-item .img{
  width: 100%;
  height: 300rpx;
}
.pro-list .pro-item .name{
  padding: 20rpx;
  color: #666;
}
.goods{
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
}
.goods text:first-child{
  color: red;
}
.goods text:last-child{
  color: #999;
  font-size: 24rpx;
}