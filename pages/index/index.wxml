<!--index.wxml-->
<view class="container">
  <view class='loading' wx:if="{{ refreshFlag }}">
    <text>正在刷新中...</text>
  </view>
  <swiper class="swiper" indicator-dots='true' autoplay='true' interval='5000' duration='1000' circular='true'>
    <block wx:for="{{ bannerList }}" wx:key="{{ index }}" wx:for-index="index">
      <swiper-item>
        <view class="swiper-item">{{ index }}</view>
      </swiper-item>
    </block>
  </swiper>
  <view class="pd-area">
    <scroll-view scroll-y="true" style="height:320px" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-top="100">
        <view class="pd-list" wx:for="{{ pdList }}" wx:key="{{ index }}">
          <navigator url="/pages/detail/detail">
            <text class="name">{{ item.characteristic }}</text>
            <text class="date">{{ item.dateStart }}</text>
          </navigator>
        </view>
      <view class='loading' wx:if="{{ loadingFlag }}">
        <text>正在加载中...</text>
      </view>
    </scroll-view>
  </view>
</view>
